<h2 class= "text-center">Quel produit souhaitez-vous comparer ?</h2>
<%= simple_form_for @compare, html: { class: "search-form" } do |f| %>
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :url1, label: "URL 1", input_html: { class: "form-control string required", id: "search_name" } %>
      </div>
      <div class="form-group">
        <%= f.input :url2, label: "URL 2", input_html: { class: "form-control string required", id: "search_query" } %>
        <div class="form-group mt-2">
          <%= f.button :submit, "Comparer", class: "btn btn-primary btn-block" do %>
            <i class="fas fa-search"></i> Comparer
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
