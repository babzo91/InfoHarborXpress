<!-- index.html.erb -->
<div class="mt-5 container">
  <div class="text-center">
    <h1 class="display-3 text-primary mb-4">InfoHarborXpress</h1>
    <p class="lead">Découvrez et extrayez des données en toute simplicité</p>

    <%= simple_form_for(@search, url: searches_path, method: :post, html: { class: "search-form" }) do |f| %>
      <div class="row justify-content-center mt-5">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.input :name, label: "Nom", placeholder: "Saisissez un nom pour votre liste", input_html: { class: "form-control form-control-lg", id: "search_name" } %>
          </div>
          <div class="form-group">
            <%= f.input :url, label: "URL", placeholder: "Saisissez une URL", input_html: { class: "form-control form-control-lg", id: "search_query" } %>
            <div class="form-group mt-3 search-form-control">
              <%= f.button :submit, "Rechercher", class: "btn btn-primary btn-lg btn-block" do %>
                <i class="fas fa-search"></i> Rechercher
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Ajout de résultats de recherche stylés -->
    <div class="mt-5">
      <h2 class="text-primary mb-4">Résultats de la recherche :</h2>
      <div class="list-group">
        <a href="#" class="list-group-item list-group-item-action">Résultat 1</a>
        <a href="#" class="list-group-item list-group-item-action">Résultat 2</a>
        <!-- Ajoutez plus de résultats en fonction de la recherche -->
      </div>
    </div>

    <!-- Ajout de sections pour Blogs, Tutoriels et Guide Débutant -->
    <div class="mt-5">
      <h2 class="text-primary mb-4">Explorez :</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="card border-primary">
            <div class="card-body">
              <h5 class="card-title text-primary">Blogs</h5>
              <p class="card-text">Découvrez les derniers articles passionnants.</p>
              <a href="#" class="btn btn-primary">Explorer</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card border-primary">
            <div class="card-body">
              <h5 class="card-title text-primary">Tutoriels</h5>
              <p class="card-text">Apprenez avec nos guides détaillés.</p>
              <a href="#" class="btn btn-primary">Explorer</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card border-primary">
            <div class="card-body">
              <h5 class="card-title text-primary">Guide Débutant</h5>
              <p class="card-text">Commencez votre voyage avec nos conseils pratiques.</p>
              <a href="#" class="btn btn-primary">Explorer</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Ajout d'une section d'instructions stylée -->
    <div class="mt-5">
      <h2 class="text-primary mb-4">Ressources accorder pour chaque etapes du processus :</h2>
      <p class="lead">Commencez à utiliser notre forfait gratuit sans frais ou demandez un essai premium de 14 jours.</p>
    </div>
  </div>
</div>
