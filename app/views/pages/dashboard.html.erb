<div class="container mt-4">
  <h1 class="mb-4">Historique des Recherches</h1>

  <div class="row">
    <% @results.each do |result| %>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Recherche : <%= result.search.name %></h5>
            <%= link_to "Télécharger CSV", search_save_csv_path(result.search), class: "btn btn-primary btn-sm", download: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
